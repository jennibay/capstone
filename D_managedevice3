<script>
    
    //NOTE!!!! (as of 2/27/19) Nag-add din ako sa style pati here sa script hehe
    
    $(function() {
        $('#typeofManage').change(function(){
        $('.options').hide();
        $('#' + $(this).val()).show();
        });
    });
    
    $(document).ready(function(){
        $('.sidenav').sidenav();
    });
    
    
    $(document).ready(function() {

        var x = 1;
          $("#stopresume").click(function() {

            if ((x % 2) != 0) {
              $(this).html('Resume Recording');
                x++;
            } else{
              $(this).html('Start Recording');
                x++;
            }
      });
    }); 
    
     $(document).ready(function(){
    $('.timepicker').timepicker();
  });
    
    $(document).ready(function(){
        
        var max = 20;
        var content = $(".pota");
        var add = $("#addtime");
       
        var x = 1;
        $(add).click(function(e){
            e.preventDefault();
            if (x < max){
                x++;
                $(content).append('<div><div class="col s12 m5 l4 input-field center" id="setTime"><input type="text" class="timepicker" id="default_start_time"></div><div class="col s12 m5 l4 input-field center" id="setDays"><p><label><input name="selected" type="checkbox" class="filled-in" /><span>Monday </span></label><label><input name="selected" type="checkbox" class="filled-in" /><span>Tuesday </span></label><label><input name="selected" type="checkbox" class="filled-in" /><span>Wednesday </span></label><label><input name="selected" type="checkbox" class="filled-in" /><span>Thursday </span></label><label><input name="selected" type="checkbox" class="filled-in" /><span>Friday </span></label><label><input name="selected" type="checkbox" class="filled-in" /><span>Saturday </span></label><label><input name="selected" type="checkbox" class="filled-in" /><span>Sunday </span></label></p></div><button style="margin-top:12%;" class="additional btn-floating btn-small waves-effect waves-light red center" id="#removetime"><i class="material-icons">remove</i></a><br></div>');
                
                $('.timepicker').timepicker();
                }
            });
        
        
        $(content).on("click", ".additional", function(e){
            
            e.preventDefault();
            $(this).parent('div').remove(); 
            x--;
            
            });
        
    });
        
    
    
    
          
</script>
                    
